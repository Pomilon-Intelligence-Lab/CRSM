{
  "name": "CRSM 170M Baseline",
  
  "model": {
    "vocab_size": 50257,
    "d_model": 1024,
    "d_state": 256,
    "d_ffn": 4096,
    "num_layers": 16,
    "dropout": 0.1
  },
  
  "training": {
    "backbone_epochs": 50,
    "finetune_epochs": 10,
    "batch_size": 32,
    "seq_len": 512,
    "lr": 5e-4,
    "finetune_lr": 2e-4,
    "grad_accum": 4,
    "use_amp": true
  },
  
  "dynamics": {
    "dynamics_samples": 10000,
    "dynamics_epochs": 15,
    "dynamics_lr": 1e-3
  },
  
  "reasoning": {
    "c_puct": 1.0,
    "n_simulations": 5
  },
  
  "data": { 
    "data_dir": "data/text_corpus",
    "traces_path": "data/train_traces.jsonl"
  },
  
  "tokenizer": "gpt2",
  "seed": 42,
  "device": "cpu",
  
  "_comment": "Realistic 350M model. Trains to convergence with proper settings."
}