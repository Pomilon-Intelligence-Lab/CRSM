{
  "name": "CRSM Small (for testing)",
  
  "model": {
    "vocab_size": 50257,
    "d_model": 128,
    "d_state": 64,
    "d_ffn": 512,
    "num_layers": 2,
    "dropout": 0.1
  },
  
  "training": {
    "backbone_epochs": 5,
    "finetune_epochs": 2,
    "batch_size": 32,
    "seq_len": 128,
    "lr": 1e-3,
    "finetune_lr": 5e-4,
    "grad_accum": 1,
    "use_amp": false
  },
  
  "dynamics": {
    "dynamics_samples": 1000,
    "dynamics_epochs": 5,
    "dynamics_lr": 1e-3
  },
  
  "reasoning": {
    "c_puct": 1.0,
    "n_simulations": 3
  },
  
  "data": { 
    "data_dir": "data/text_corpus",
    "traces_path": "data/train_traces.jsonl"
  },
  
  "tokenizer": "gpt2",
  "seed": 42,
  "device": "cpu",
  
  "_comment": "Small config for quick testing. Uses SimpleVocab (no HF tokenizer)."
}